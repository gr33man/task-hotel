include ../../form/elements/shell/shell.pug
include ../../form/elements/button/button.pug


mixin calendar
    div.datepicker-here
        div.butcont
            span.clear очистить
            span.confirm применить     

mixin searchroom
    div.searcher
        p.searcher__title
                        | Найдем номера под
                        | ваши пожелания
        +dropContShort('ДД.ММ.ГГГГ','прибытие')
        +dropContShort('ДД.ММ.ГГГГ','отъезд')
        +dropCont('Сколько гостей','гости')
        +click('подобрать номер','arrow_forward')
        
    
     
                          
mixin pricelist(num,price)
    div.pricebody
          p.string &#8470; <span class="number">#{num}</span> <span class="lux">люкс</span> <span class="price">#{price}<i class="fa fa-rub" aria-hidden="true" style="font-size:14px;margin-left:1px;"></i></span> <span class="end">в сутки</span>
          +dropContShort('19.08.2019','прибытие')
          +dropContShort('23.08.2019','выезд')
          +dropCont('3 гостя','гости') 
          div.pricebody__boxprice
            div.priceitems
                span.namelist 9 990<i class="fa fa-rub" style="font-size:13px;" aria-hidden="true"></i> &times;4
                span.namelist Сбор за услуги: скидка 2 179<i class="fa fa-rub" style="font-size:13px;" aria-hidden="true"></i> <div class="circle">i</div> 
                span.namelist Сбор за дополнительные <div class="circle">i</div> услуги                             
                
            div.pricescores
               each digit in ['39 990', 0, 300]
                 span.namelist #{digit}<i class="fa fa-rub" style="font-size:13px;" aria-hidden="true"></i> 

          span.allcost Итого<hr class="allcost__dot">38 081<i class="fa fa-rub" style="font-size:17px;" aria-hidden="true"></i>
          +click('забронировать','arrow_forward')    
                 