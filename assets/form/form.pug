html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=1170")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        script(src="https://use.fontawesome.com/ff88c31cb5.js")
        title forms
    body
        include ../sign/sign.pug
        include ./elements/shell/shell.pug
        

        
        div.container  
            +inpCont('text field','Email','grey','default') 
            +inpCont('text field','this is pretty awesome','black','hover/focus')
            +dropCont('Сколько гостей','dropdown','default')
            +inpCont('masked text field','ДД.ММ.ГГГГ','grey','default')
        div.container2
            div.container2__elem1
                +dropContShort('ДД.ММ.ГГГГ','date dropdown')
            div.container2__elem2    
                +dropContShort('19.08.2019','date dropdown')
            div.container2__elem3    
                +dropContMiddle('19 авг - 23 авг','filter date dropdown','black')
            div.container2__elem4    
                 +inpCont('subscription text field','Email','grey') 
                 <i class="material-icons">arrow_forward</i>
        div.dropdef
            +dropContMiddle('2 спальни, 2 кровати...','dropdown','black')
        div.dropexp
            +dropContMiddle('2 спальни, 2 кровати...','dropdown','black','Default')
            +expended(['спальни','кровати','ванные комнаты'])
        div.dropimp
            +dropCont('Сколько гостей','dropdown')
            +expendedImprove(['взрослые','дети','младенцы'], 'применить')
        div.dropimp2
            +dropCont('3 гостя','dropdown')
            +expendedImprove(['взрослые','дети','младенцы'], 'применить', 'очистить')      
                

