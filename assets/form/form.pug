html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=1170")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
        script(src="https://use.fontawesome.com/ff88c31cb5.js")
       
       
        title forms
    body
        include ../sign/sign.pug
        include ./elements/shell/shell.pug
        include ./elements/check/check.pug
        include ./elements/comment/comment.pug
        
        
        div.container  
            +inpCont('text field','Email','grey','default') 
            +inpCont('text field','this is pretty awesome','black','hover/focus')
            +dropCont('Сколько гостей','dropdown','default')
            +inpCont('masked text field','ДД.ММ.ГГГГ','grey','default')
        div.container2
            div.container2__elem1
                +dropContShort('ДД.ММ.ГГГГ','date dropdown')
            div.container2__elem2    
                +dropContShort('19.08.2019','date dropdown')
            div.container2__elem3    
                +dropContMiddle('19 авг - 23 авг','filter date dropdown','black')
            div.container2__elem4    
                 +inpCont('subscription text field','Email','grey') 
                 <i class="material-icons">arrow_forward</i>
        div.dropdef
            +dropContMiddle('2 спальни, 2 кровати...','dropdown','black')
        div.dropexp
            +dropContMiddle('2 спальни, 2 кровати...','dropdown','black','Default')
            +expended(['спальни','кровати','ванные комнаты'])
        div.dropimp
            +dropCont('Сколько гостей','dropdown')
            +expendedImprove(['взрослые','дети','младенцы'], 'применить')
        div.dropimp2
            +dropCont('3 гостя','dropdown')
            +expendedImprove(['взрослые','дети','младенцы'], 'применить', 'очистить')      
        div.checkboxclose
            +checkhead('expandable checkbox list','expand_more')
        div.checkboxopen
            +checkhead('expandable checkbox list','expand_less')
            +checkbody(['Завтрак','Писменный стол','Стул для крепления','Кроватка','Телевизор','Шампунь'])
        div.doublecheck1
            +checkhead('checkbox buttons')
            +checkbody(['Можно курить','Можно с питомцами',' Можно пригласить гостей (до 10 человек)'])
        div.doublecheck2
            +checkhead('Rich Checkbox Buttons')
            +checkbody(['Широкий коридор','Помощник для инвалидов'])
            span.discrip1 Ширина коридоров в номере не менее 91 см.
            span.discrip2  На 1 этаже вас встретит специалист и проводит до номера.
        div.radbut
            span.radbut__name radio buttons
            +radio(['Мужчина','Женщина'])
        div.togbut
            span.togbut__name toggle
            div.togbut__elem
                +toggle
                span.text Получать спецпредложения
            div.togbut__elem     
                +toggle
                span.text Получать спецпредложения    
        div.dischotel
            +discription('tag_faces','Комфорт', 'Шумопоглощающие стены')
            hr
            +discription('location_city','Удобство', 'Окно в каждой из спален')
            hr
        div.preslist
            span.preslist__title bullet list 
            +warning
        div.opinion
            +comments('../img/image.svg')
        div.likebutton
            span.likebutton__title like button
            +likebut(2,'favorite_border')
            +likebut(12)
        div.ratebutton
            span.ratebutton__title rate button
            +ratebut()
            +ratebut()
        div.buttonset
            span.buttonset__title buttons
            +click('click me')
            +click('click me')
            +click('click me')
            +click('click me')
            span.buttonset__name1 click me
            span.buttonset__name2 click me              
        div.longbut
            +click('перейти к оплате','arrow_forward')
        div.rangeslider
            span.rangeslider__title Range Slider
            +slidebar
        div.pagination 
            span.pagination__title pagination         
            +pagebar        
        



        script(src="https://code.jquery.com/jquery-1.12.4.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")