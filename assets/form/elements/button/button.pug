mixin likebut(digit,icon="favorite")
    div.likes
        <i class="material-icons">#{icon}</i>
        span.likes__digit= digit 


mixin ratebut(icon="star_border", digit)
    -let num= 5-digit
    div.starbox
        -for(i=0;i<digit;i++)
            <i class="material-icons">#{icon}</i>

        if num > 0
            -for(i=0;i<num;i++)
                <i class="material-icons">star_border</i>      


mixin click(name,icon)
    if icon
        button.btnclick(onclick="document.location.href = 'roomquest.html'") #{name}  <i class="material-icons">#{icon}</i>            
    else 
         button.btnclick= name

mixin slidebar
    div.slideset
        input#amount(type="text" readonly)
        div#slider-range

mixin pagebar
    div.pagebox
        div.pagebox__one 1
        each page in ['2','3','...','15']
            div.pagebox__num= page 
        <i class="material-icons">arrow_forward</i>
        span.pagebox__text 1 – 12 из 100+ вариантов аренды                  