mixin expendedImprove([...names], ok,cancel)
    div.droppyex
        each name in [...names]
            div.elements
                p.elements__words= name
                div.elements__numbers
                    div.elements__numbers__circle1
                        span.minus -
                    span.elements__numbers__num 0 
                    div.elements__numbers__circle2
                        span.plus +
        div.done
            if cancel
                span.cancel= cancel
            span.ok= ok                                        